<p>
	This is a page that shows all the users and allows The director to edit IpCommitee members
	Visible only to director
	Show's all the Users who are not in IpCommittee
	<%= @nonips.count %>
</p>
<br>
<h1>Users</h1>
<%= form_tag users_changeroletoIpcommittee_path, :method => :post do %>
	<table>
	  <thead>
	    <tr>
	    	<th>Select</th>
	      	<th>Username</th>
	      	<th>Email</th>
	      	<th>Designation</th>
	      	<th>Role</th>
	      	<th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @nonips.each do |user| %>
	      <tr>
	      	<td><%= check_box_tag "selected_users[]",user.id %></td>
	        <td><%= user.username %></td>
	        <td><%= user.email %></td>
	        <td><%= user.designation %></td>
	        <td><%= user.role %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<%= submit_tag "Mark For Updating" %>	
<% end %>
<br>


